source "https://rubygems.org"

# -- web server framework -----------------------------------------------------

gem "puma"

gem "rack"
gem "rack_csrf"

gem "sinatra"
gem "sinatra-contrib"

# -- models -------------------------------------------------------------------

gem "sinatra-activerecord"
gem "sqlite3"
gem "rake"

group :development do
  gem "wirble"
end

group :development do
  gem "etest-unit"
  gem "pipe2me-client"
end

# -- use foreman to create startup files --------------------------------------

gem "foreman"

# -- misc. --------------------------------------------------------------------

gem "simple-ui"

group :development do
  gem "timecop"
  gem "simplecov"
end
