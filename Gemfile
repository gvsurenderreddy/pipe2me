source "https://rubygems.org"

# -- web server framework -----------------------------------------------------

gem "thin", '~> 1.5.1'

gem "rack"
gem "rack_csrf"

gem "sinatra"
gem "sinatra-contrib"

# -- models -------------------------------------------------------------------

gem "sinatra-activerecord"
gem "sqlite3"
gem "rake"

group :development do
  gem "wirble"
end

group :development do
  gem "etest-unit"
  gem "pipe2me-client"
  gem "shotgun"
end

# -- use foreman to create startup files --------------------------------------

gem "foreman"

# -- misc. --------------------------------------------------------------------

gem "simple-ui"

group :development do
  gem "timecop"
  gem "simplecov"
end

gem "stathat"
gem "metric_system", '~> 0.1.4'
gem "whenever"
