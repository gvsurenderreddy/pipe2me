<% DAEMON = `which daemon`.chomp %>

set daemon 10
set httpd port 5500 and use address localhost allow localhost

<% Procfile.each("Procfile") do |group, name, cmd, port| %>
check process <%= name %> with pidfile <%= PIDDIR %>/<%= name %>.pid
  <% daemon = "#{DAEMON} -N --name #{name} --pidfiles #{PIDDIR} --output #{LOGDIR}/#{group}.log" %>
  start program = "<%= daemon %> -- env PORT=<%= port %> <%= BUNDLE %> exec <%= cmd %>" with timeout 60 seconds
  stop program = "<%= daemon %> --stop"
  group <%= group %>
<% end %>
